apiVersion: argoproj.io/v1alpha1
kind: Rollout
metadata:
  name: weatherapp-weather-rollout
  namespace: rollout-deploy
spec:
  replicas: 3
  strategy:
    canary:
      steps:
      - setWeight: 30
      - pause: {duration: 20}
      - setWeight: 60
      - pause: {duration: 20}
  revisionHistoryLimit: 2
  selector:
    matchLabels:
      app: weatherapp-weather-rollout
  template:
    metadata:
      labels:
        app: weatherapp-weather-rollout
    spec:
      containers:
      - name: weatherapp-weather-rollout
        image: ghazouanihm/weatherapp-weather:1.0
        env:
            - name: APIKEY
              value: "9bf8ba9657ba467ca4b123541231105"
        ports:
        - name: tcp-weather
          containerPort: 5000
          protocol: TCP
        resources:
          requests:
            memory: 32Mi
            cpu: 5m
