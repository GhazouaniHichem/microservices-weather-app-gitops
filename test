---

apiVersion: argoproj.io/v1alpha1
kind: Rollout
metadata:
  name: weatherapp-auth-rollout
  namespace: rollout-deploy
spec:
  replicas: 3
  strategy:
    canary:
      steps:
      - setWeight: 30
      - pause: {duration: 20}
      - setWeight: 60
      - pause: {duration: 20}
  revisionHistoryLimit: 2
  selector:
    matchLabels:
      app: weatherapp-auth-rollout
  template:
    metadata:
      labels:
        app: weatherapp-auth-rollout
    spec:
      containers:
      - name: weatherapp-auth-rollout
        image: ghazouanihm/weatherapp-auth:1.0
        env:
            - name: DB_HOST
              value: "db-service"
            - name: DB_PASSWORD
              value: "my-secret-pw"
        ports:
        - name: tcp-auth
          containerPort: 8080
          protocol: TCP
        resources:
          requests:
            memory: 32Mi
            cpu: 5m

---

apiVersion: argoproj.io/v1alpha1
kind: Rollout
metadata:
  name: weatherapp-db-rollout
  namespace: rollout-deploy
spec:
  replicas: 3
  strategy:
    canary:
      steps:
      - setWeight: 30
      - pause: {duration: 20}
      - setWeight: 60
      - pause: {duration: 20}
  revisionHistoryLimit: 2
  selector:
    matchLabels:
      app: weatherapp-db-rollout
  template:
    metadata:
      labels:
        app: weatherapp-db-rollout
    spec:
      containers:
      - name: weatherapp-db-rollout
        image: ghazouanihm/weatherapp-db:1.0
        env:
            - name: MYSQL_ROOT_PASSWORD
              value: "my-secret-pw"
        ports:
        - name: tcp-db
          containerPort: 3306
          protocol: TCP
        resources:
          requests:
            memory: 32Mi
            cpu: 5m

